name: Daily Quote Generator

on:
  schedule:
    # Jeden Tag um 06:00 Uhr UTC
    - cron: '0 6 * * *'
  workflow_dispatch: # Erlaubt manuelles Starten zum Testen

jobs:
  build:
    runs-on: ubuntu-latest
    
    permissions:
      contents: write # WICHTIG: Erlaubt dem Bot, die Datei zu speichern

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install Dependencies
        run: npm install openai

      - name: Generate Quote
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: node generate.js

      - name: Commit and Push changes
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "Neuer Tages-Spruch generiert"
          file_pattern: quote.json
